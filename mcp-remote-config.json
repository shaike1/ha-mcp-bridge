{
  "mcpServers": {
    "ha-mcp-bridge": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-cli", "stdio"],
      "env": {
        "MCP_SERVER_URL": "https://ha-mcp-web.right-api.com",
        "MCP_SERVER_TOKEN": "YOUR_API_KEY_HERE"
      }
    },
    "ha-mcp-bridge-direct": {
      "command": "curl",
      "args": [
        "-X", "POST",
        "-H", "Content-Type: application/json",
        "-H", "Authorization: Bearer YOUR_API_KEY_HERE",
        "-H", "ha-url: YOUR_HA_URL_HERE",
        "-H", "ha-token: YOUR_HA_TOKEN_HERE",
        "-d", "{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\"}",
        "https://ha-mcp-web.right-api.com/"
      ]
    },
    "ha-mcp-bridge-oauth": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-cli", "stdio"],
      "env": {
        "MCP_SERVER_URL": "https://ha-mcp-web.right-api.com",
        "MCP_OAUTH_CLIENT_ID": "YOUR_CLIENT_ID",
        "MCP_OAUTH_CLIENT_SECRET": "YOUR_CLIENT_SECRET",
        "MCP_OAUTH_REDIRECT_URI": "https://ha-mcp-web.right-api.com/oauth/callback"
      }
    },
    "ha-mcp-bridge-http": {
      "command": "node",
      "args": ["-e", "require('http').request({hostname:'ha-mcp-web.right-api.com',port:443,path:'/',method:'POST',headers:{'Content-Type':'application/json','Authorization':'Bearer YOUR_API_KEY_HERE','ha-url':'YOUR_HA_URL_HERE','ha-token':'YOUR_HA_TOKEN_HERE'}},res=>res.pipe(process.stdout)).end(JSON.stringify({jsonrpc:'2.0',id:1,method:'initialize'}))"]
    },
    "ha-mcp-bridge-ws": {
      "command": "wscat",
      "args": [
        "-c", "wss://ha-mcp-web.right-api.com/ws",
        "-H", "Authorization: Bearer YOUR_API_KEY_HERE",
        "-H", "ha-url: YOUR_HA_URL_HERE",
        "-H", "ha-token: YOUR_HA_TOKEN_HERE"
      ]
    }
  }
} 